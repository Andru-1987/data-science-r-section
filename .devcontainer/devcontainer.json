{
  "name": "R Environment",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "r-dev",
  "workspaceFolder": "/workspaces",
  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",
        "RDebugger.r-debugger"
      ],
      "settings": {
        "r.rterm.linux": "/usr/local/bin/radian",
        "r.bracketedPaste": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "forwardPorts": [
    8000,
    3306
  ],
  "portsAttributes": {
    "8000": {
      "label": "R Plumber API"
    },
    "3306": {
      "label": "MySQL"
    }
  },
  "postCreateCommand": "bash /workspaces/post-create.sh",
  "remoteUser": "root"
}